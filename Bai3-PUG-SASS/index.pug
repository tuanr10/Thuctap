doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  meta(http-equiv='X-UA-Compatible' content='ie=edge')
  link(href='https://fonts.googleapis.com/css?family=Josefin+Sans:300,400,400i|Nunito:300,300i' rel='stylesheet')
  link(rel='stylesheet' href='css/style.css')
  link(rel='stylesheet' href='css/reset.css')
  link(rel='shortcut icon' type='image/png' href='img/favicon.png')
  title nexter &mdash; your home, your freedom
body 
  .container
    .sidebar
      button.nav-btn
    header.header
      img.header__logo(src='img/logo.png' alt='Nexter logo')
      h3.heading-3 Your own home:
      h1.heading-1 The ultimate personal freedom
      button.btn.header__btn View our properties
      .header__seenon-text Seen on
      .header__seenon-logos
        img(src='img/logo-bbc.png' alt='Seen on logo 1')
        img(src='img/logo-forbes.png' alt='Seen on logo 2')
        img(src='img/logo-techcrunch.png' alt='Seen on logo 3')
        img(src='img/logo-bi.png' alt='Seen on logo 4')
    section.features
      .feature
        svg.feature__icon
          use(xlink:href='img/sprite.svg#icon-global')
        h4.heading-4.heading-4--dark World&apos;s best luxury homes
      .feature
        svg.feature__icon
          use(xlink:href='img/sprite.svg#icon-trophy')
        h4.heading-4.heading-4--dark Only the best properties
      .feature
        svg.feature__icon
          use(xlink:href='img/sprite.svg#icon-map-pin')
        h4.heading-4.heading-4--dark
          | All homes in in top locations
      .feature
        svg.feature__icon
          use(xlink:href='img/sprite.svg#icon-key')
        h4.heading-4.heading-4--dark New home in one week
      .feature
        svg.feature__icon
          use(xlink:href='img/sprite.svg#icon-presentation')
        h4.heading-4.heading-4--dark Top 1% realtors
      .feature
        svg.feature__icon
          use(xlink:href='img/sprite.svg#icon-lock')
        h4.heading-4.heading-4--dark Secure payments on nexter
    .story__pictures
      img.story__img--1(src='img/story-1.jpeg' alt='Couple with new house')
      img.story__img--2(src='img/story-2.jpeg' alt='New house')
    .story__content
      h3.heading-3.mb-sm Happy Customers
      h2.heading-2.heading-2--dark.mb-md
        | &ldquo;The best decision of our lives&rdquo;
      button.btn Find your own home
    section.homes
      .home
        img.home__img(src='img/house-1.jpeg' alt='House 1')
